<script>
    let idServiceDel = 0;
    function setIdServiceDel(id) {
        idServiceDel = id;
    }
    let imageUpdate = [];
    let idServiceUpdate = 0;
    let imgOld = '';
    function previewImage(event) {
        const input = event.target;
        const imgDiv = document.getElementById('img-dich-vu');

        // Kiểm tra xem người dùng đã chọn file chưa
        if (input.files && input.files[0]) {
            const reader = new FileReader();

            // Xử lý khi ảnh được đọc
            reader.onload = function (e) {
                imgDiv.innerHTML = `<img src="${e.target.result}" alt="Hình ảnh dịch vụ" class="w-full h-40 object-cover rounded-lg" />`;
            };

            // Đọc file ảnh
            reader.readAsDataURL(input.files[0]);
        } else {
            // Nếu không có file nào được chọn, xóa ảnh cũ
            imgDiv.innerHTML = '';
        }
    }

    function populateUpdateForm(service) {
        document.getElementById('ten_dich_vu_update').value = service.ten_dich_vu;
        document.getElementById('gia_tien_update').value = service.gia_tien;
        document.getElementById('thoi_luong_update').value = service.thoi_luong;
        document.getElementById('mo_ta_update').value = service.mo_ta;
        imgOld = service.hinh_anh;
        // document.getElementById('hinh_anh_update').value =service.hinh_anh;
        reloadUpdateImg(service.hinh_anh);
        idServiceUpdate = service.id;
    }

    function reloadUpdateImg(img) {
        const imgDiv = document.getElementById('img-dich-vu_update');
        imgDiv.innerHTML = '';
        // Kiểm tra xem người dùng đã chọn file chưa
        if (img) {
            const imgElement = document.createElement('img');
            imgElement.src = img;
            imgElement.alt = `Hình ảnh dịch vụ`;
            imgElement.className = 'w-full h-40 object-cover rounded-lg';
            imgDiv.appendChild(imgElement);

        } else {
            // Nếu không có file nào được chọn, xóa ảnh cũ
            imgDiv.innerHTML = '';
        }
    }

    document.getElementById('hinh_anh_update').onchange = function (event) {
        const input = event.target;
        const imgDiv = document.getElementById('img-dich-vu_update');

        // Kiểm tra xem người dùng đã chọn file chưa
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                imgDiv.innerHTML = `<img src="${e.target.result}" alt="Hình ảnh dịch vụ" class="w-full h-40 object-cover rounded-lg" />`;
                imageUpdate.push({
                    url: e.target.result,
                    file: input.files[0]
                });
            };
            reader.readAsDataURL(input.files[0]);
        }
        // document.getElementById('hinh_anh_update').value = '';

    }

    // Xử lý khi form thêm dịch vụ được submit
    document.getElementById('addService').addEventListener('submit', async function (e) {
        e.preventDefault();

        // Lấy thông tin từ form
        const formData = new FormData(this);
        const data = {};
        formData.forEach((value, key) => {
            data[key] = value;
        });

        imgFiles = new FormData();
        imgFiles.append('images', data.hinh_anh)
        const imgUploadRes = await fetch('/api/upload/Images', {
            method: 'POST',
            body: imgFiles,
        });

        const imgUploadResData = await imgUploadRes.json();
        const uploadedImageUrls = imgUploadResData.imageUrls;
        data.hinh_anh = uploadedImageUrls[0];

        // Gửi request thêm dịch vụ
        const response = await fetch('/api/services/addService', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        });

        // Nếu request thêm dịch vụ thành công
        if (response.ok) {
            // Hiển thị thông báo thành công
            alert('Thêm dịch vụ thành công');

            // Tải lại trang
            window.location.reload();
        } else {
            // Nếu request thêm dịch vụ thất bại, hiển thị lỗi
            alert(data.message);
        }
    });

    document.getElementById('updateServiceForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        // Lấy thông tin từ form
        const formData = new FormData(this);
        const data = {};
        formData.forEach((value, key) => {
            data[key] = value;
        });

        if (imageUpdate.length > 0) {
            imgFiles = new FormData();
            imgFiles.append('images', imageUpdate[0].file)
            const imgUploadRes = await fetch('/api/upload/Images', {
                method: 'POST',
                body: imgFiles,
            });
            const imgUploadResData = await imgUploadRes.json();
            const uploadedImageUrls = imgUploadResData.imageUrls;
            data.hinh_anh = uploadedImageUrls[0];
        }
        else {
            data.hinh_anh = imgOld;
        }
        const response = await fetch(`/api/services/updateService/${idServiceUpdate}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        });

        if (response.ok) {
            alert('Cập nhật dịch vụ thành công');
            window.location.reload();
        } else {
            alert('Có lỗi xảy ra khi cập nhật dịch vụ');
        }


    })

    async function deleteService() {
        try {
            const response = await fetch(`http://localhost:3000/api/services/deleteService/${idServiceDel}`, {
                method: 'DELETE',
            });

            if (response.ok) {
                window.location.reload();
                alert('Xóa nhân viên thành công!');

            } else {
                alert('Có lỗi xảy ra khi xóa nhân viên.');
            }
        }
        catch (error) {
            console.error(error);
        }
    }


</script>